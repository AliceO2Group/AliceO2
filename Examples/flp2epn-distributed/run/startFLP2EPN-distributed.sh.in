EPN0+=" --id epnReceiver1"
# EPN0+=" --mq-config $cfg"
EPN0+=" --heartbeat-interval 5000"
EPN0+=" --num-flps 3"
EPN0+=" --test-mode 1"
EPN0+=" --data-in-address tcp://127.0.0.1:5560"
