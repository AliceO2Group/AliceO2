{
    "fairMQOptions": {
        "devices": [
            {
                "id": "source",
                "channels": [
                    {
                        "name": "data-out",
                        "sockets": [
                            {
                                "type": "push",
                                "method": "bind",
                                "address": "@ipc://shmsource",
                                "sndBufSize": 100,
                                "rcvBufSize": 1000,
                                "rateLogging": 1
                            }
                        ]
                    }
                ]
            },
            {
                "id": "sink",
                "channels": [
                    {
                        "name": "data-in",
                        "sockets": [
                            {
                                "type": "pull",
                                "method": "connect",
                                "address": "+ipc://shmsource",
                                "sndBufSize": 1000,
                                "rcvBufSize": 1000,
                                "rateLogging": 1
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
