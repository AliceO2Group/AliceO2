<?xml version="1.0"?>
<data>

  <!-- action                -->
  <!-- 1: print parsed files -->
  <!-- 2: print data model   -->
  <!-- 3. create html        -->
  <!-- else no output        -->
  <action>
    3
  </action>

  <O2general>

    <mainDir>
      <!-- main path to the local O2 installation -->
      <O2local>
        ../..
      </O2local>

      <O2Physicslocal>
        ../../../O2Physics
      </O2Physicslocal>

      <!-- ALICE O2Physics gitHub repository -->
      <O2GitHub>
        https://github.com/AliceO2Group/AliceO2/tree/dev
      </O2GitHub>

      <O2PhysicsGitHub>
        https://github.com/AliceO2Group/O2Physics/tree/master
      </O2PhysicsGitHub>

    </mainDir>

    <!-- title for tables created by default when reading AO2D.root -->
    <AO2Dproducer>
      AO2D files
    </AO2Dproducer>

    <!-- leading string of task executables -->
    <exePreamble>
      o2-analysis-
    </exePreamble>

    <!-- string used in CMakefiles.txt to define a task executable -->
    <CEdeclarationString>
      o2physics_add_dpl_workflow
    </CEdeclarationString>

    <!-- regex used to identify version identifiers in table names -->
    <TableVersionPattern>
      _\d\d\d$
    </TableVersionPattern>

    <!-- delimiters used to mark text blocks to be replaced in html files -->
    <delimAO2D>
      &lt;!-- Block with AO2D tables --&gt;
    </delimAO2D>

    <delimHelpers>
      &lt;!-- Block with helper tasks --&gt;
    </delimHelpers>

    <delimJoins>
      &lt;!-- Block with joins and iterators --&gt;
    </delimJoins>

    <delimPWGs>
      &lt;!-- Block with PWG tables --&gt;
    </delimPWGs>

  </O2general>


  <!-- There are different types of DataModels -->
  <!-- type: Main -->
  <!--       tables included in the AO2D files -->
  <!-- type: Helper -->
  <!--       tables produced by "helper tasks" -->
  <!-- type: PWG -->
  <!--       tables produced by "PWG tasks" -->
  <!-- -->
  <!-- For some of the items default values are assumed -->
  <!-- These do not necessarily need to be set -->
  <!--   Item */mainDir: . -->
  <!--   Item headerFiles/fileName: *.h -->
  <!--   Item CMLfiles/fileName: CMakeLists.txt -->
  <!--   Item codeFiles/fileName: *.cxx -->

  <DataModels>

    <DataModel type="Main" name="AO2D">
      <headerFiles>
        <!-- relative to O2general/mainDir/O2local -->
        <fileName>
          Framework/Core/include/Framework/AnalysisDataModel.h
        </fileName>
      </headerFiles>

      <categories>
        <category name="General">
          o2::aod::BCs, o2::aod::Timestamps, o2::aod::Collisions
        </category>
        <category name="Tracks">
          o2::aod::Tracks, o2::aod::TracksIU, o2::aod::TracksCov, o2::aod::TracksCovIU, o2::aod::TracksExtra, o2::aod::StoredTracks, o2::aod::StoredTracksIU, o2::aod::StoredTracksCov, o2::aod::StoredTracksCovIU, o2::aod::StoredTracksExtra, o2::aod::MFTTracks, o2::aod::StoredMFTTracks, o2::aod::FwdTracks, o2::aod::FwdTracksCov, o2::aod::StoredFwdTracks, o2::aod::StoredFwdTracksCov, o2::aod::AmbiguousTracks, o2::aod::AmbiguousMFTTracks, o2::aod::AmbiguousFwdTracks
        </category>
        <category name="Detectors">
          o2::aod::FV0As, o2::aod::FT0s, o2::aod::FDDs, so2::aod::HMPIDs, o2::aod::Calos, o2::aod::CaloTriggers, o2::aod::Zdcs, o2::aod::FV0Cs, o2::aod::HMPIDs
        </category>
        <category name="Strangeness">
          o2::aod::V0s, o2::aod::TransientV0s, o2::aod::StoredV0s, o2::aod::Cascades, o2::aod::TransientCascades, o2::aod::StoredCascades
        </category>
        <category name="Indices">
          o2::aod::Run3MatchedExclusive, o2::aod::Run3MatchedSparse, o2::aod::MatchedBCCollisionsExclusive, o2::aod::MatchedBCCollisionsSparse, o2::aod::Run3MatchedToBCExclusive, o2::aod::Run3MatchedToBCSparse
        </category>
        <category name="MonteCarlo">
          o2::aod::McCollisions, o2::aod::McParticles, o2::aod::StoredMcParticles, o2::aod::McTrackLabels, o2::aod::McMFTTrackLabels, o2::aod::McFwdTrackLabels, o2::aod::McCaloLabels, o2::aod::McCollisionLabels
        </category>
        <category name="Run2">
          o2::aod::Run2BCInfos, o2::aod::Run2MatchedExclusive, o2::aod::Run2MatchedSparse, o2::aod::Run2MatchedToBCSparse
        </category>
      </categories>

    </DataModel>

    <DataModel type="Helper" name="Helpers">
      <headerFiles>
        <!-- relative to O2general/mainDir/O2Physicslocal -->
        <mainDir>
          Common
        </mainDir>
        <!-- selection of files to consider as header files -->
        <!-- relative to headerFiles/mainDir -->
        <fileName>
          Core/PID/*.h, DataModel/*.h
        </fileName>
      </headerFiles>

      <!-- where to get the CMakeLists.txt files from -->
      <CMLfiles>
        <!-- relative to O2general/mainDir/O2Physicslocal -->
        <mainDir>
          Common/TableProducer
        </mainDir>
        <!-- selection of files to consider as CMakeLists files -->
        <!-- relative to CMLfiles/mainDir -->
        <fileName>
          CMakeLists.txt, PID/CMakeLists.txt
        </fileName>
      </CMLfiles>

      <!-- where to get the task code files from -->
      <codeFiles>
        <!-- relative to O2general/mainDir/O2Physicslocal -->
        <mainDir>
          Common/TableProducer
        </mainDir>
        <!-- selection of files to consider as task code files -->
        <!-- relative to codeFiles/mainDir -->
        <fileName>
          *.cxx, PID/*.cxx
        </fileName>
      </codeFiles>
    </DataModel>


    <DataModel type="PWG" name="CF">
      <!-- where to get the extra header files from -->
      <headerFiles>
        <!-- relative to O2general/mainDir/O2Physicslocal -->
        <mainDir>
          PWGCF
        </mainDir>
        <!-- selection of files to consider as header files -->
        <!-- relative to headerFiles/mainDir -->
        <fileName>
          DataModel/*.h
        </fileName>
      </headerFiles>

      <!-- where to get the CMakeLists.txt files from -->
      <CMLfiles>
        <!-- relative to O2general/mainDir/O2Physicslocal -->
        <mainDir>
          PWGCF
        </mainDir>
        <!-- selection of files to consider as CMakeLists files -->
        <!-- relative to CMLfiles/mainDir -->
        <fileName>
          TableProducer/CMakeLists.txt
        </fileName>
      </CMLfiles>

      <!-- where to get the task code files from -->
      <codeFiles>
        <!-- relative to O2general/mainDir/O2Physicslocal -->
        <mainDir>
          PWGCF
        </mainDir>
        <!-- selection of files to consider as task code files -->
        <!-- relative to codeFiles/mainDir -->
        <fileName>
          TableProducer/*.cxx
        </fileName>
      </codeFiles>
    </DataModel>


    <DataModel type="PWG" name="DQ">
      <!-- where to get the extra header files from -->
      <headerFiles>
        <!-- relative to O2general/mainDir/O2Physicslocal -->
        <mainDir>
          PWGDQ
        </mainDir>
        <!-- selection of files to consider as header files -->
        <!-- relative to headerFiles/mainDir -->
        <fileName>
          DataModel/*.h
        </fileName>
      </headerFiles>

      <!-- where to get the CMakeLists.txt files from -->
      <CMLfiles>
        <!-- relative to O2general/mainDir/O2Physicslocal -->
        <mainDir>
          PWGDQ
        </mainDir>
        <!-- selection of files to consider as CMakeLists files -->
        <!-- relative to CMLfiles/mainDir -->
        <fileName>
          TableProducer/CMakeLists.txt
        </fileName>
      </CMLfiles>

      <!-- where to get the task code files from -->
      <codeFiles>
        <!-- relative to O2general/mainDir/O2Physicslocal -->
        <mainDir>
          PWGDQ
        </mainDir>
        <!-- selection of files to consider as task code files -->
        <!-- relative to codeFiles/mainDir -->
        <fileName>
          TableProducer/*.cxx
        </fileName>
      </codeFiles>
    </DataModel>


    <DataModel type="PWG" name="HF">
      <!-- where to get the extra header files from -->
      <headerFiles>
        <!-- relative to O2general/mainDir/O2Physicslocal -->
        <mainDir>
          PWGHF
        </mainDir>
        <!-- selection of files to consider as header files -->
        <!-- relative to headerFiles/mainDir -->
        <fileName>
          DataModel/*.h, TableProducer/*.cxx
        </fileName>
      </headerFiles>

      <!-- where to get the CMakeLists.txt files from -->
      <CMLfiles>
        <!-- relative to O2general/mainDir/O2Physicslocal -->
        <mainDir>
          PWGHF
        </mainDir>
        <!-- selection of files to consider as CMakeLists files -->
        <!-- relative to CMLfiles/mainDir -->
        <fileName>
          TableProducer/CMakeLists.txt
        </fileName>
      </CMLfiles>

      <!-- where to get the task code files from -->
      <codeFiles>
        <!-- relative to O2general/mainDir/O2Physicslocal -->
        <mainDir>
          PWGHF
        </mainDir>
        <!-- selection of files to consider as task code files -->
        <!-- relative to codeFiles/mainDir -->
        <fileName>
          TableProducer/*.cxx
        </fileName>
      </codeFiles>
    </DataModel>


    <DataModel type="PWG" name="JE">
      <!-- where to get the extra header files from -->
      <headerFiles>
        <!-- relative to O2general/mainDir/O2Physicslocal -->
        <mainDir>
          PWGJE
        </mainDir>
        <!-- selection of files to consider as header files -->
        <!-- relative to headerFiles/mainDir -->
        <fileName>
          DataModel/*.h, ../Common/DataModel/*.h
        </fileName>
      </headerFiles>

      <!-- where to get the CMakeLists.txt files from -->
      <CMLfiles>
        <!-- relative to O2general/mainDir/O2Physicslocal -->
        <mainDir>
          PWGJE
        </mainDir>
        <!-- selection of files to consider as CMakeLists files -->
        <!-- relative to CMLfiles/mainDir -->
        <fileName>
          TableProducer/CMakeLists.txt
        </fileName>
      </CMLfiles>

      <!-- where to get the task code files from -->
      <codeFiles>
        <!-- relative to O2general/mainDir/O2Physicslocal -->
        <mainDir>
          PWGJE
        </mainDir>
        <!-- selection of files to consider as task code files -->
        <!-- relative to codeFiles/mainDir -->
        <fileName>
          TableProducer/*.cxx
        </fileName>
      </codeFiles>
    </DataModel>


  </DataModels>

</data>
