FLP1+=" --output-socket-type push --output-buff-size $buffSize --output-method connect --output-address tcp://127.0.0.1:5560 --log-output-rate 1"
FLP1+=" --output-socket-type push --output-buff-size $buffSize --output-method connect --output-address tcp://127.0.0.1:5561 --log-output-rate 1"
FLP1+=" --output-socket-type push --output-buff-size $buffSize --output-method connect --output-address tcp://127.0.0.1:5562 --log-output-rate 1"
xterm -geometry 80x25+500+350 -hold -e @CMAKE_BINARY_DIR@/bin/$FLP1 &

FLP2="testFLP_distributed"
FLP2+=" --id FLP2"
FLP2+=" --event-size 10000000"
FLP2+=" --num-inputs 3"
FLP2+=" --num-outputs 3"
FLP2+=" --heartbeat-timeout 20000"
FLP2+=" --send-offset 2"
